    author = {Therasse, Patrick and Arbuck, Susan G. and Eisenhauer, Elizabeth A. and Wanders, Jantien and Kaplan, Richard S. and Rubinstein, Larry and Verweij, Jaap and Van Glabbeke, Martine and van Oosterom, Allan T. and Christian, Michaele C. and Gwyther, Steve G.},
